@model ContactManagement.Core.Contact

@{
    ViewData["Title"] = "Edit Contact";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Edit Contact</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row mb-3">
                    <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="FirstName" class="form-control" style="width: 300px;" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="LastName" class="form-control" style="width: 300px;" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="CompanyName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="CompanyName" class="form-control" style="width: 300px;" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="Mobile" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Mobile" class="form-control"
                               style="width: 300px;"
                               pattern="\d{10}"
                               title="Please enter exactly 10 digits" />
                        <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Email" class="form-control" style="width: 300px;" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-sm-10 offset-sm-2">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            $.validator.addMethod("exactlength", function(value, element, param) {
                return this.optional(element) || value.length === param;
            }, "Mobile number must be exactly 10 digits");

            $("form").validate({
                rules: {
                    Mobile: {
                        required: true,
                        exactlength: 10,
                        digits: true
                    }
                },
                messages: {
                    Mobile: {
                        required: "Mobile number is required",
                        digits: "Only digits are allowed"
                    }
                }
            });
        });
    </script>
}