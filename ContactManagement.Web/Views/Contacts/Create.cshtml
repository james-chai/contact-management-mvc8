@model ContactManagement.Core.Contact

@{
    ViewData["Title"] = "Create Contact";
}

<div class="container mt-4">
    <h2>Create Contact</h2>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row mb-3">
            <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-6">
                <input asp-for="FirstName" class="form-control" style="width: 300px;" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-6">
                <input asp-for="LastName" class="form-control" style="width: 300px;" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="CompanyName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-6">
                <input asp-for="CompanyName" class="form-control" style="width: 300px;" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="Mobile" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-6">
                <input asp-for="Mobile" class="form-control"
                       style="width: 300px;"
                       pattern="\d{10}"
                       title="Please enter exactly 10 digits" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-6">
                <input asp-for="Email" class="form-control" style="width: 300px;" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-6 offset-sm-2">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            $.validator.addMethod("exactlength", function(value, element, param) {
                return this.optional(element) || value.length === param;
            }, "Mobile number must be exactly 10 digits");

            $("form").validate({
                rules: {
                    Mobile: {
                        required: true,
                        exactlength: 10,
                        digits: true
                    }
                },
                messages: {
                    Mobile: {
                        required: "Mobile number is required",
                        digits: "Only digits are allowed"
                    }
                }
            });
        });
    </script>
}